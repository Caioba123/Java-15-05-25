1° Questão
package Main;

import java.util.Scanner;

public class AtvJava {

	public static void main(String[] args) {
		
           Scanner tec = new Scanner(System.in);
		 
		 System.out.println("Bem-Vindo a nossa Casa de Câmbio");
	        
	        
	        System.out.println("Escreva quantos dólares quer converter");
	        int converter1 = tec.nextInt();
	        
	      
	        double valorDolar = 5.68;
	        
	        
	       
	        double totalDolares = converter1 * valorDolar;
	   
	        
	 
	        System.out.printf("O valor de %d dólares é equivalente a %.2f reais.%n", converter1, totalDolares);
	        System.out.println("O valor da cotação do Dolar atualmente é 5.68");
	
	}

}


2° Questão
package Main;

import java.util.Scanner;

public class AtvJava {

	public static void main(String[] args) {
		
           Scanner tec = new Scanner(System.in);
		 
		 System.out.println("Bem-Vindo a nossa Poupança");
	        
	        
	        System.out.println("Quanto deseja inserir na conta?");
	        int conta = tec.nextInt();
	        
	      
	        double juros = 0.70;
	        
	        
	       
	        double Mes = conta * 0.70;
	   
	        
	 
	        System.out.printf("O valor que voce inseriu é " + conta + " Reais", conta);
	        
	        System.out.printf(" e ele renderá certa de " + Mes + " Reais ao Mes");
	        
	
	}

}


